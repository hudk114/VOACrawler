{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "rules": {
    "linebreak-style": ["error", "unix"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never"
    }],
    "prettier/prettier": "error"
  },
  "plugins": [
    "prettier"
  ]
}
